---
interface Props {
  src: string
  title: string
}

const { src, title } = Astro.props
---

<div class='flex flex-col text-center'>
  <img src={src} class="h-10 fill-green-600 hover:scale-125 hover:-translate-y-3 duration-200" />
  <span class="text-red-600 font-bold text-sm md:text-base">{title}</span>
</div>
